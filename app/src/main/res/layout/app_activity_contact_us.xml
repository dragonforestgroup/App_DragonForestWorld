<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WebArticleDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBlueForLoginTitle"
        app:title="联系我们"
        app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/ed_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="left|top"
        android:textSize="16sp"
        android:background="@color/colorGrayForBackground"
        android:hint="欢迎给我留言，可以指出我们的不足，或者告诉我你感兴趣的其他事情。如果需要我的帮助，我会随时恭候。"
        android:textColorHint="@android:color/darker_gray"
        android:layout_margin="5dp"
        android:minHeight="200dp"/>
    <Button
        android:id="@+id/btn_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Contact Us"/>
</LinearLayout>